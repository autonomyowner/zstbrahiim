# ZST Backend - Production Environment Variables
# Copy this file to .env.production and fill in your values

# ═══════════════════════════════════════════════════════════════
# NODE ENVIRONMENT
# ═══════════════════════════════════════════════════════════════
NODE_ENV=production
PORT=3000

# ═══════════════════════════════════════════════════════════════
# DATABASE (PostgreSQL on same server)
# ═══════════════════════════════════════════════════════════════
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=zst_user
DATABASE_PASSWORD=YOUR_STRONG_PASSWORD_HERE
DATABASE_NAME=zst_db

# ═══════════════════════════════════════════════════════════════
# REDIS (on same server)
# ═══════════════════════════════════════════════════════════════
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# Leave REDIS_PASSWORD empty if Redis has no password (default)

# ═══════════════════════════════════════════════════════════════
# CLERK AUTHENTICATION
# Get these from: https://dashboard.clerk.com/
# ═══════════════════════════════════════════════════════════════
CLERK_PUBLISHABLE_KEY=<your-clerk-publishable-key>
CLERK_SECRET_KEY=<your-clerk-secret-key>
CLERK_WEBHOOK_SECRET=<your-clerk-webhook-secret>

# ═══════════════════════════════════════════════════════════════
# CLOUDFLARE R2 STORAGE
# Get these from: https://dash.cloudflare.com/
# Navigate to: R2 > Manage R2 API Tokens
# ═══════════════════════════════════════════════════════════════
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=zst-media
R2_PUBLIC_URL=https://cdn.zst-app.com
# OR use the default R2 public URL:
# R2_PUBLIC_URL=https://pub-xxxxxxxxxxxxx.r2.dev

# ═══════════════════════════════════════════════════════════════
# FRONTEND URL (for CORS)
# ═══════════════════════════════════════════════════════════════
FRONTEND_URL=https://zst-app.com
# Multiple URLs: FRONTEND_URL=https://zst-app.com,https://www.zst-app.com

# ═══════════════════════════════════════════════════════════════
# RATE LIMITING
# ═══════════════════════════════════════════════════════════════
THROTTLE_TTL=60
THROTTLE_LIMIT=100
# TTL in seconds, LIMIT = number of requests per TTL window

# ═══════════════════════════════════════════════════════════════
# OPTIONAL SETTINGS
# ═══════════════════════════════════════════════════════════════
# LOG_LEVEL=error,warn
# MAX_FILE_SIZE=104857600  # 100MB in bytes
# JWT_SECRET=your_jwt_secret_if_needed
